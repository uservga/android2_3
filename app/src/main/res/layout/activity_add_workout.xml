<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/workout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Тип вправи" />

    <EditText
        android:id="@+id/workout_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Тривалість (хв)" />

    <EditText
        android:id="@+id/workout_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Спалено калорій" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зберегти результат"
        android:onClick="saveWorkout" />
</LinearLayout>
